{
  "rules": {
    "strict": 0 // controls location of Use Strict Directives. 0: required by `babel-eslint`
  },
  "env": {
    "es2020": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  }
}
